<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/app_bg_blur" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cardViewBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="25dp"
            android:src="@drawable/ic_back"
            app:cardCornerRadius="15dp"
            app:cardElevation="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="ifContentScrolls"
            app:layout_constraintBottom_toTopOf="@+id/textViewResend"
            app:layout_constraintTop_toBottomOf="@+id/cardViewBack">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:elevation="20dp"
                    android:src="@mipmap/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Verification"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewOtpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/we_have_sent_you_containing_6_digits_n_verification_code_please_enter_the_code_to_n_verify_your_identity"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewOtp" />

                <com.fictivestudios.hush.utils.otpview.OTPTextView
                    android:id="@+id/otpView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:elevation="4dp"
                    android:backgroundTint="@color/edit_otp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:overScrollMode="ifContentScrolls"
                    android:textColor="@color/text_labeled"
                    app:box_margin="5dp"
                    app:height="45dp"
                    app:hide_otp="false"
                    app:hide_otp_drawable="@drawable/round_corner_edit_text_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewOtpTitle"
                    app:length="6"
                    app:otp=""
                    app:otp_box_background="@drawable/round_corner_edit_text_bg"
                    app:otp_box_background_active="@drawable/round_corner_edit_text_bg"
                    app:otp_box_background_error="@drawable/round_corner_edit_text_bg"
                    app:otp_box_background_inactive="@drawable/round_corner_edit_text_bg"
                    app:otp_box_background_success="@drawable/round_corner_edit_text_bg"
                    app:otp_text_size="15sp"
                    app:width="45dp" />

                <com.fictivestudios.hush.utils.CircularTimerView
                    android:id="@+id/progressTimer"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="30dp"
                    android:progress="23"
                    app:backgroundColor="@color/edit_otp"
                    app:isClockwise="false"
                    app:layout_constraintEnd_toEndOf="@+id/otpView"
                    app:layout_constraintStart_toStartOf="@+id/otpView"
                    app:layout_constraintTop_toBottomOf="@+id/otpView"
                    app:maxValue="100"
                    app:prefix="00:"
                    app:progressBackgroundColor="@color/edit_otp"
                    app:progressColor="@color/theme_red"
                    app:progressText="00"
                    app:progressTextColor="@color/text_labeled"
                    app:startingPoint="top"
                    app:textSize="14sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <com.fictivestudios.hush.utils.customLoader.LazyLoader
            android:layout_width="wrap_content"
            android:id="@+id/progress"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            app:lazyloader_animDur="800"
            app:lazyloader_dotsDist="10dp"
            app:lazyloader_dotsRadius="6dp"
            app:lazyloader_firstDelayDur="150"
            android:visibility="gone"
            tools:visibility="visible"
            app:lazyloader_firstDotColor="@color/red"
            app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
            app:lazyloader_secondDelayDur="300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lazyloader_secondDotColor="@color/theme_red"
            app:lazyloader_thirdDotColor="@color/theme_red" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewResend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:fontFamily="@font/montserrat_semi_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Didn't received the OTP? Resend" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>