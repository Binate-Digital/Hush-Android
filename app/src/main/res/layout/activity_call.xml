<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.CallActivity">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewUserImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/card_labeled"
            app:cardCornerRadius="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/theme_red"
            app:strokeWidth="2dp">

            <com.fictivestudios.demo.utils.CircleImageView
                android:id="@+id/imageViewUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/persons" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            tools:text="John Doe"
            android:textColor="@color/text_labeled"
            android:textSize="18sp"
            app:fontFamily="@font/montserrat_semi_bold"
            app:layout_constraintEnd_toEndOf="@+id/cardViewUserImage"
            app:layout_constraintStart_toStartOf="@+id/cardViewUserImage"
            app:layout_constraintTop_toBottomOf="@+id/cardViewUserImage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hush voice calling"
            android:textColor="@color/text_labeled"
            android:textSize="18sp"
            app:fontFamily="@font/montserrat_semi_bold"
            app:layout_constraintEnd_toEndOf="@+id/textViewUserName"
            app:layout_constraintStart_toStartOf="@+id/textViewUserName"
            app:layout_constraintTop_toBottomOf="@+id/textViewUserName" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewSpeaker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toStartOf="@+id/cardViewMike"
            app:layout_constraintStart_toStartOf="@+id/cardViewUserImage"
            app:layout_constraintTop_toBottomOf="@+id/textViewTimeStamp"
            app:strokeColor="@color/theme_red"
            app:strokeWidth="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewSpeaker"
                android:layout_width="29dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_off_speaker" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewMike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="60dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="@+id/cardViewUserImage"
            app:layout_constraintStart_toEndOf="@+id/cardViewSpeaker"
            app:layout_constraintTop_toBottomOf="@+id/textViewTimeStamp"
            app:strokeColor="@color/theme_red"
            app:strokeWidth="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewMike"
                android:layout_width="22dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_microphone" />

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewEndCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_decline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>